{%- import 'net_map.j2' as nm with context %}
---
cluster:
  domain: mcp-ovs-ha.local
  states:
    - virtual_init
{%- if nm.cluster.has_baremetal_nodes %}
    - maas
    - baremetal_init
{%- endif %}
{%- if conf.MCP_VCP %}
    - virtual_control_plane
{%- endif %}
    - openstack_ha
    - networks
virtual:
  nodes:
    infra:
{%- if nm.cluster.has_baremetal_nodes %}
      - mas01
{%- endif %}
    control:
      - kvm01
      - kvm02
      - kvm03
    compute:
      - cmp001
      - cmp002
  # Below values are only used for each node if said node is virtual
  mas01:
    vcpus: 4
    ram: 6144
  # NOTE: We might need to add more RAM here
  kvm01:
    vcpus: 4
    ram: 14336
  kvm02:
    vcpus: 4
    ram: 14336
  kvm03:
    vcpus: 4
    ram: 14336
  cmp001:
    vcpus: 4
    ram: 8192
  cmp002:
    vcpus: 4
    ram: 8192
