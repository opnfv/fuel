{%- if conf.MCP_VCP %}
classes:
  - cluster.mcp-pike-common-ha.include.maas_proxy
  - cluster.mcp-pike-common-ha.include.lab_proxy_pdf
parameters:
  _param:
    pxe_admin_interface: ${_param:opnfv_vcp_vm_primary_interface}
    single_nic: ${_param:opnfv_vcp_vm_secondary_interface}
  linux:
    network:
      interface:
        pxe_admin:
          enabled: true
          type: eth
          proto: static
          name: ${_param:pxe_admin_interface}
	  address: ${_param:pxe_admin_address}
          netmask: ${_param:opnfv_net_admin_mask}
        single:
          enabled: true
          type: eth
          proto: static
          name: ${_param:single_nic}
          address: ${_param:single_address}
          netmask: ${_param:opnfv_net_public_mask}
{%- endif %}
