# We'll craft this class so it can be reused on both cfg01 and mas01
{% if conf.idf.fuel.network.upstream_proxy is defined %}
parameters:
  maas:
    region:
      upstream_proxy:
        address: {{ conf.idf.fuel.network.upstream_proxy.address }}
        port: {{ conf.idf.fuel.network.upstream_proxy.port }}
  salt:
    minion:
      proxy:
        host: {{ conf.idf.fuel.network.upstream_proxy.address }}
        port: {{ conf.idf.fuel.network.upstream_proxy.port }}
{% endif %}
