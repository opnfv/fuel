{%- import 'net_map.j2' as nm with context %}
---
parameters:
  linux:
    network:
      interface:
        dpdk0:
          name: ${_param:dpdk0_name}
          pci: ${_param:dpdk0_pci}
          driver: igb_uio
          enabled: true
          bridge: br-prv
          type: dpdk_ovs_port
          n_rxq: 2
        br-prv:
          enabled: true
          type: dpdk_ovs_bridge
          address: ${_param:tenant_address}
          netmask: 255.255.255.0
          {%- if nm.vlan_private and nm.vlan_private != 'native' %}
          tag: {{ nm.vlan_private }}
          {%- endif %}
