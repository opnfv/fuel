diff --git a/neutron/agents/_vpp.sls b/neutron/agents/_vpp.sls
new file mode 100644
index 0000000..834a5a2
--- /dev/null
+++ b/neutron/agents/_vpp.sls
@@ -0,0 +1,39 @@
+{%- if pillar.neutron.gateway is defined %}
+{%- from "neutron/map.jinja" import gateway as neutron with context %}
+{%- else %}
+{%- from "neutron/map.jinja" import compute as neutron with context %}
+{%- endif %}
+
+{%- if 'vpp' in neutron.get('backend', {}).get('mechanism', []) %}
+
+/etc/neutron/plugins/ml2/ml2_conf.ini:
+  file.managed:
+  - source: salt://neutron/files/{{ neutron.version }}/_ml2_conf.vpp.ini
+  - mode: 0640
+  - user: root
+  - group: neutron
+  - template: jinja
+
+{#- Starting with Rocky, brctl is allowed via ./linuxbridge-plugin.filters #}
+{%- if pillar.neutron.gateway is defined %}
+
+/etc/neutron/rootwrap.d/vpp.filters:
+  file.managed:
+  - contents: |
+      [Filters]
+      brctl: CommandFilter, brctl, root
+  - mode: 0640
+  - user: root
+  - group: neutron
+
+{%- endif %}
+
+vpp:
+  service.running:
+    - enable: True
+
+vpp-agent:
+  service.running:
+    - enable: True
+
+{%- endif %}
