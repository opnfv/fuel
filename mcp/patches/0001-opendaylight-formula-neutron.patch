@@ -50,7 +50,7 @@ core_plugin = neutron.plugins.ml2.plugin.Ml2Plugin
 {% set l3_plugin = 'networking_ovn.l3.l3_ovn.OVNL3RouterPlugin' %}
 {% endif %}

-service_plugins ={{ l3_plugin }}, neutron.services.metering.metering_plugin.MeteringPlugin
