{%- import 'net_map.j2' as nm with context %}
<network>
  <name>pxebr</name>
  <forward mode="nat"/>
  <bridge name="pxebr"/>
  <ip address="{{ nm.net_admin_gw }}" netmask="{{ nm.net_admin | ipnet_netmask }}">
    <dhcp>
      <range start="{{ nm.net_admin_pool_start }}" end="{{ nm.net_admin_pool_end }}"/>
    </dhcp>
  </ip>
</network>
